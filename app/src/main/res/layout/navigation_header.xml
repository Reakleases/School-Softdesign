<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_vertical_spacing"
    android:background="@drawable/nav_header_bg">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/header_profile_image"
        android:layout_width="@dimen/profile_size"
        android:layout_height="@dimen/profile_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"

        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/profile" />




    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_alignLeft="@+id/header_profile_image"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/header_profile_image"
        android:orientation="vertical">


        <TextView
            android:id="@+id/header_text_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/header_text_user_email"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="@string/header_text.user"
            android:textColor="@color/text_color_white" />

        <TextView
            android:id="@+id/header_text_user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/nav_header_margin_bottom"
            android:text="@string/header_text.email"
            android:textColor="@color/text_color_white" />

    </RelativeLayout>


</RelativeLayout>